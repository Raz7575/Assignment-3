<%- include('../partials/header') %>

<h2 class="mb-4">All Assignments</h2>

<a href="/assignments/new" class="btn btn-success mb-3">+ Add Assignment</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Course</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% assignments.forEach(a => { %>
      <tr>
        <td><a href="/assignments/<%= a._id %>"><%= a.title %></a></td>
        <td><%= a.course %></td>
        <td><%= a.dueDate.toDateString() %></td>
        <td>
          <a href="/assignments/<%= a._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <form method="POST" action="/assignments/<%= a._id %>/delete" class="d-inline">
            <button class="btn btn-danger btn-sm" onclick="return confirm('Delete this assignment?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
